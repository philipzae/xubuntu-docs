msgid "cd [directory]"
msgstr "cd [répertoire]"

#: user-docs/C/command-line.xml:53(userinput)
#, no-wrap
msgid "cp"
msgstr "cp"

#: user-docs/C/command-line.xml:53(seg)
msgid "Copies a file (or files) to a directory or to overwrite another file"
msgstr ""
"Copie un fichier (ou des fichiers) vers un répertoire ou écrase un autre "
"fichier"

#: user-docs/C/command-line.xml:53(userinput)
#, no-wrap
